{
  "name": "mcp-zephyr",
  "version": "1.1.0",
  "description": "MCP server for analyzing Zephyr/West workspace directories and verifying Kconfig options",
  "main": "src/index.js",
  "bin": {
    "mcp-zephyr": "src/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["mcp", "zephyr", "west", "ncs", "embedded", "modelcontextprotocol", "nordic", "rtos", "firmware", "kconfig", "claude"],
  "author": "leogao25",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leog25/zephyr-west-mcp.git"
  },
  "homepage": "https://github.com/leog25/zephyr-west-mcp#readme",
  "bugs": {
    "url": "https://github.com/leog25/zephyr-west-mcp/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "yaml": "^2.8.1"
  },
  "mcp": {
    "name": "mcp-zephyr",
    "description": "Analyzes Zephyr/West workspace directories for components, versions, and build configurations. Includes Kconfig verification for safe implementation.",
    "transport": {
      "type": "stdio"
    },
    "tools": [
      "analyze_workspace",
      "get_zephyr_version", 
      "list_modules",
      "get_manifest_info",
      "list_boards",
      "get_build_info",
      "verify_kconfigs"
    ]
  }
}
